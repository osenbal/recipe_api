{
  "name": "auth-be",
  "version": "1.0.0",
  "description": "auth service with clean architecture",
  "scripts": {
    "test": "NODE_ENV=test jest --watchAll --collectCoverage",
    "build": "tsc",
    "start": "tsc && NODE_ENV=production node build/main.js",
    "dev": "tsc && NODE_ENV=development nodemon -q build/main.js",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate"
  },
  "author": "osenbal",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^7.45.0",
    "@sentry/tracing": "^7.45.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase": "^9.20.0",
    "firebase-admin": "^11.7.0",
    "jsonwebtoken": "^9.0.1",
    "mariadb": "^3.1.1",
    "module-alias": "^2.2.3",
    "mongodb": "^4.13.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.2.0",
    "sequelize": "^6.29.3",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/mongodb": "^4.0.7",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.18",
    "@types/sequelize": "^4.28.14",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "jest": "^29.3.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.5",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  },
  "_moduleAliases": {
    "@data": "build/data",
    "@domain": "build/domain",
    "@presentation": "build/presentation",
    "@infrastructure": "build/infrastructure",
    "@utils": "build/utils",
    "@constants": "build/constants"
  }
}
